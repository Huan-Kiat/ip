<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="huan.gui.MainWindow">
    <children>
        <ScrollPane fx:id="scrollPane"
                    prefHeight="557.0" prefWidth="400.0"
                    vvalue="1.0" hbarPolicy="NEVER">
            <content>
                <VBox fx:id="dialogContainer" prefWidth="388.0" />
            </content>
        </ScrollPane>
        <TextField fx:id="userInput"
                   layoutY="558.0"
                   prefHeight="41.0" prefWidth="324.0"
                   onAction="#handleUserInput"/>
        <Button fx:id="sendButton"
                layoutX="324.0" layoutY="558.0"
                prefHeight="41.0" prefWidth="76.0"
                text="Send"
                onAction="#handleUserInput"/>
    </children>
</AnchorPane>